{
  "builds": [
    {
      "src": "prisma/schema.prisma",
      "use": "@prisma/client"
    },
    {
      "src": "next.config.ts",
      "use": "@vercel/static-build"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/notifications?job=birthday-notification",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/notifications?job=activity-monitoring",
      "schedule": "0 10 * * 1"
    }
  ]
}
